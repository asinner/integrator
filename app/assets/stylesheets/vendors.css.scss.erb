@import '_colors';
@import '_mixins';

/* Vendor */
#dashboard .vendor {
	position: relative;
	font-size: 14px;
}
#dashboard .vendor .cc-ref {
	width: 10px;
	height: 10px;
	@include border-radius(5px);
	float: left;
	position: relative;
	top: 20px;
}
#dashboard .vendor .header {
	border: none;
	color: #FFF !important;
	height: auto !important;
	font-size: 14px;
	font-weight: 400;
	@include lightUiGradient;
	padding-left: 50px;
	color: rgb(51, 51, 51) !important;
	border-bottom: 1px solid rgb(200, 200, 200);
}
#dashboard .vendor .header .title {
	float: left;
	margin-left: 15px;
}
#dashboard .vendor .body {
	padding: 0 !important;
	border: 1px solid rgb(230, 230, 230) !important;
	border-top: none !important;
}
#dashboard .vendor .add-link {
	display: block;
	float: left;
	font-size: 12px;
	height: 30px;
	line-height: 30px;
	margin-left: 15px;
	@include border-radius(4px);
	padding: 0 10px;
	position: relative;
	top: 10px;
	border: 1px solid rgb(150, 150, 150);
	@include lightUiGradient;
	border: 1px solid rgb(190, 190, 190);
	color: rgb(130, 130, 130);
	@include box-shadow(0px 1px 0px #FFF);
}
#dashboard .vendor .add-link:hover {
	color: rgb(100, 100, 100);
	border: 1px solid rgb(100, 100, 100);
}
#dashboard .vendor .log-link {
	display: block;
	float: left;
	margin-left: 5px;
	@include box-shadow(0px 1px 0px #FFF);
	position: relative;
	top: 10px;
	@include border-radius(4px);
	border: 1px solid rgb(190, 190, 190);
	color: rgb(130, 130, 130);
	height: 30px;
	width: 30px;
	background: url(<%= asset_path 'conversation-outline-icon-gray.png' %>) no-repeat;
}
#dashboard .vendor .log-link:hover {
	border: 1px solid rgb(100, 100, 100);
}

/* Contacts */
.vendor .contact:first-child {
	border-top: 1px solid rgb(240, 240, 240);
}