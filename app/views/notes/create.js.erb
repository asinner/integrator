var form = $('#new_note');
form.finished();

<% if @note.persisted? %>

	modalBackground();
	
	<% if @notable.class.name.downcase == "event" %>
		
		$('#event-page .note').replaceWith("<%= j render partial: 'notes/single' %>");
	
	<% end %>
	
<% else %>
	
	// Loop through the address errors
	<% if @note.errors.any? %>
		<% @note.errors.each do |input, msg| %>
			// Find the field div containing the input
			var field = form.find("<%= ".field.#{input}" %>");
			// Give the field an error class
			field.addClass('error');
			// Put the error message into the placeholder
			field.find('.error-placeholder').html("<%= msg %>");
		<% end %>
	<% end %>

<% end %>