<div class='location' id='location_<%= location.id %>'>

	<div class='header'>
		<%= link_to '', edit_event_location_path(@event, location), class: 'edit-link modal-link' %>
		
		<div class='purpose'>
			<%= location.purpose %>
		</div>		
	</div>
	
	<div class='body'>
		<div class="name">
			<%= location.name %>
		</div>
		<div class='line1'>
			<%= location.address.line1 %>
		</div>
		<div class='line2'>
			<%= location.address.line2 %>
		</div>
		<div class='city-state'>
			<%= "#{location.address.city}, #{location.address.state}" %>
		</div>
		<div class='zip'>
			<%= location.address.zip %>
		</div>
	</div>
</div>