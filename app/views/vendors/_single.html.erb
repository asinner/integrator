<div class='vendor' id='vendor_<%= vendor.id %>'>
	
	<div class='header'>
		<%= link_to '', edit_event_vendor_path(@event, vendor), class: 'edit-link' %>
		<div class='name'>
			<%= vendor.name %>
		</div>
		<div class='category'>
			<%= vendor.category %>
		</div>
		
	</div>
	
	<div class='body'>
		
		<%= link_to 'Add contact to vendor Â»', new_event_contact_path(@event, params: { vendor_id: vendor.id }), class: 'add-link' %>

		<div class='contacts'>
			<% if vendor.contacts.any? %>

				<% vendor.contacts.each do |contact| %>

					<%= render 'contacts/single', contact: contact %>

				<% end %>

			<% else %>

				No contacts

			<% end %>
		</div>
		
		
	</div>	
</div>