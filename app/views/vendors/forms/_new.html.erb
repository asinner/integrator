<%= form_for @vendor, url: event_vendors_path(@event), html: { autocomplete: :off }, authenticity_token: true, remote: true do |f| %>
	
	<div class='form-wrap'>
		
		<div class='field name'>
			<div class='label-container'>
				<%= f.label :name, 'Vendor name', class: 'label' %>
			</div>
			<div class='text-input-container'>
				<%= f.text_field :name, placeholder: 'XYZ Catering Company', class: 'text-input' %>
			</div>
			<div class='clear'></div>
			<span class='error-placeholder'></span>
		</div>
		
		<div class='field category'>
			<div class='label-container'>
				<%= f.label :category, 'Vendor category', class: 'label' %>
			</div>
			<div class='text-input-container'>
				<%= f.text_field :category, placeholder: 'Catering', class: 'text-input' %>
			</div>
			<div class='clear'></div>
			<span class='error-placeholder'></span>
		</div>
		
		<%= render 'contacts/forms/fields/new', f: f %>
				
		<%= f.submit 'Add vendor' %>
		
	</div>
	
<% end %>