<div class='timeline_items loop'>
	
	<div class='header'>
		<h2 class='heading'><%= @timeline.name %></h2>
		<%= link_to 'Add timeline event Â»', new_timeline_timeline_item_path(@timeline), class: 'new-link' %>
		
	</div>
	
	<div class='body'>
		<% if @timeline_items.exists? %>

			<% @timeline_items.each do |timeline_item| %>

