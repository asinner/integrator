<%= form_for @upload, url: event_uploads_path(@event), multipart: true, html: { target: 'upload-submission' } do |f| %>

	<div class='upload-form-wrap form-wrap'>
		
		<div class='header'>
			Select files to upload
			<i class='close'>✖</i>
		</div>
		
		<div class='body'>
			
			<div class='note'>
				<% if params[:floorplan] %>

					Note: Floorplan images must be either .png, .jpeg, or .gif

				<% end %>
			</div>
			
			<%= f.button 'Choose files »', type: 'button', class: 'button clear-button-orange button-h-40 file-input-button' %>
			
			<%= f.file_field :file, multiple: true, class: 'hidden-file-input trigger-submission-change' %>
			
			<% if params[:floorplan] %>
			
				<%= f.hidden_field :floorplan, value: true %>
			
			<% end %>
			
			<iframe name='upload-submission' id='iframe-upload'></iframe>
			
		</div>
  
		<div class='footer'>
				
			<%= f.button 'Cancel', type: 'button', class: 'button cancel-button button-h-40' %>

		</div>
		
	</div>
	
<% end %>

