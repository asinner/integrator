// Get the form
var form = $('#new_event');

// Tell JS that the form is done
form.trigger('done');

<% if @event.persisted? %>
	
	alert('The event persisted?');
	
<% else %>

	// Display the errors
	<% if @event.errors.any? %>
	
		// Loop through the event errors
		<% @event.errors.each do |input, msg| %>
		
			alert("<%= input %>");
		
		<% end %>
		
		// Loop through the client errors
		<% if @event.clients && @event.clients.errors.any? %>
		
		<% end %>
	
	<% end %>
	
<% end %>